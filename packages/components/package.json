{
  "name": "@raisehq/components",
  "version": "0.1.50",
  "license": "MIT",
  "author": "Raise HQ",
  "main": "dist/index.js",
  "module": "dist/components.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prepare": "env-cmd --no-override .env tsdx build",
    "watch": "env-cmd --no-override .env tsdx watch --noClean --transpileOnly",
    "dev": "env-cmd --no-override .env tsdx watch",
    "dev:int": "yarn run dev",
    "build": "rm -f tsdx.config.js && env-cmd --no-override .env tsdx build",
    "build:fast": "env-cmd --no-override .env tsdx build  --noClean --transpileOnly",
    "build:umd": "cp tsdx.umd.config.js tsdx.config.js && env-cmd --no-override .env tsdx build --format umd --name RaiseComponents --input src/index.cards.tsx",
    "test": "env-cmd --no-override .env tsdx test --env=jsdom",
    "lint": "env-cmd --no-override .env tsdx lint src/"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@testing-library/react": "^10.0.3",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "eslint-config-react-app": "^5.2.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.0.8",
    "react-test-renderer": "^16.13.1",
    "tsdx": "0.11.0",
    "tslib": "^1.10.0",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "@bloomprotocol/share-kit-react": "^4.5.1",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/lodash": "^4.14.149",
    "@types/numeral": "^0.0.26",
    "axios": "^0.19.0",
    "bignumber.js": "^9.0.0",
    "bn.js": "^5.0.0",
    "buttercms": "^1.2.1",
    "daggy": "^1.4.0",
    "dayjs": "^1.8.24",
    "dompurify": "^2.0.7",
    "dotenv": "^8.2.0",
    "graphql.js": "0.6.1",
    "jest-image-snapshot": "^3.1.0",
    "jest-transform-css": "^2.0.0",
    "jest-transform-file": "^1.1.1",
    "jsdom-screenshot": "^3.2.0",
    "lodash": "^4.17.15",
    "lodash-es": "^4.17.15",
    "numeral": "^2.0.6",
    "pampy": "^0.0.6",
    "react-chartjs-2": "^2.9.0",
    "react-content-loader": "^4.3.2",
    "react-device-detect": "^1.12.1",
    "react-google-recaptcha": "^2.0.1",
    "react-number-format": "^4.4.1",
    "react-spring": "^8.0.27",
    "semantic-ui-react": "^0.88.1",
    "sha3": "^2.1.2",
    "styled-components": "^5.0.0",
    "uuid": "^8.0.0",
    "validator": "^13.0.0"
  }
}
